#returns names which are even, and odd names only return the first character

def splicer(mystring):
    if len(mystring)%2 == 0:
        return 'EVEN'
    else:
        return mystring[0].lower()

names = ['Andy' , 'John', 'Eve', 'Lucas']

list(map(splicer,names))

['EVEN', 'EVEN', 'e', 'l']

